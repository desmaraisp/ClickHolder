<Application
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="ClickHolder.App">

	<Application.Styles>
		<FluentTheme />
	</Application.Styles>

	
	<TrayIcon.Icons>
		<TrayIcons>
			<TrayIcon Icon="/Assets/tray-icon.ico" ToolTipText="My ToolTip">
				<TrayIcon.Menu>
					<NativeMenu>
						<NativeMenuItem Header="Exit" Click="OnExitButtonClick" />
					</NativeMenu>
				</TrayIcon.Menu>
			</TrayIcon>
		</TrayIcons>
	</TrayIcon.Icons>

</Application>